{
  "manifest_version": 3,
  "name": "CODIM CNS Fix - Patch by DemianRey",
  "version": "3.0",
  "description": "Moderniza completamente CODIM CNS con interfaz responsive y arreglos de VBScript",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://13.131.146.246/*",
    "https://masnet.intranet.telmex.com/*",
    "https://*.intranet.telmex.com/*",
    "http://*.intranet.telmex.com/*"
  ],
  "icons": {
    "16": "telmex.png",
    "32": "telmex.png", 
    "48": "telmex.png",
    "128": "telmex.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://13.131.146.246/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "classic-patch.js"
      ],
      "matches": ["http://13.131.146.246/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}