{
  "manifest_version": 3,
  "name": "CODIM CNS Fix - Patch by DemianRey",
  "version": "1.2",
  "description": "Arregla autom√°ticamente los problemas de VBScript en CODIM CNS y mejora la interfaz",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://13.131.146.246/*"
  ],
  "icons": {
    "16": "telmex.png",
    "32": "telmex.png", 
    "48": "telmex.png",
    "128": "telmex.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://13.131.146.246/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "styles.css"],
      "matches": ["http://13.131.146.246/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}